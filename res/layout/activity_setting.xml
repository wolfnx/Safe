<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itcast="http://schemas.android.com/apk/res/cn.itcast.safe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

	<cn.itcast.lost.view.SettingItemView
	    android:id="@+id/siv_update"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    itcast:title="自动更新设置"
	    itcast:desc_on="自动更新已开启"
	    itcast:desc_off="自动更新已关闭"
	    />
	
	<cn.itcast.lost.view.SettingItemView
	    android:id="@+id/siv_address"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    itcast:title="电话归属地显示设置"
	    itcast:desc_on="归属地显示已开启"
	    itcast:desc_off="归属地显示已关闭"
	    />

	<cn.itcast.lost.view.SettingItemView
		android:id="@+id/siv_callSafe"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		itcast:title="黑名单的设置"
		itcast:desc_on="黑名单已开启"
		itcast:desc_off="黑名单已关闭"
		/>
	
	<cn.itcast.lost.view.SettingClickView
	    android:id="@+id/siv_addressStyle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
	
	<cn.itcast.lost.view.SettingClickView
	    android:id="@+id/siv_addressLocation"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
	
</LinearLayout>
